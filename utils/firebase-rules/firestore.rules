rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    
    match /users/{uid} {
    	allow read, write: if request.auth.uid == uid;
      
      match /keys/{boxid} {
        allow read, write: if request.auth.uid == uid;
      }
    }
    
    match /box-front-covers/{boxFronts} {
    	allow read: if true;
      allow write: if boxFronts == request.auth.uid;
    }
    
    match /boxes/{boxid} {
    	allow read: if true;
      allow write: if resource.data.ownerid == request.auth.uid;
      allow create: if request.auth != null;
      
      match /private/{privateField} {
      	allow read, write: if
        	get(/databases/$(database)/documents/boxes/$(boxid)).data.ownerid == request.auth.uid;
      }
    }
  }
}