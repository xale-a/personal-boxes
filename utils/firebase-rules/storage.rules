rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    match /box-front-covers/{uid}/{image} {
      allow write: if request.auth.uid == uid;
    }

    match /boxes/{uid}/{boxid}/{allFiles=**} {
    	allow write: if request.auth.uid == uid;
    }
  }
}